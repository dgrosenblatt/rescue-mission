<h1>Edit Question</h1>

<%= form_for @question do |f| %>

  <% if @question.errors.any? %>
  <h4>Question not saved, because:</h4>
    <% @question.errors.full_messages.each do |error| %>
    <ul>
      <li><%= error %></li>
    </ul>
    <% end %>
  <% end %>
  
  <div>
    <%= f.label :title, 'Title' %>
    <br>
    <%= f.text_field :title, size: "80" %>
  </div>

  <div>
    <%= f.label :description, 'Description' %>
    <br>
    <%= f.text_area :description, size: "80x10" %>
  </div>

  <%= f.submit %>
<% end  %>



<%= link_to "Delete this question", @question, method: :delete, data: { confirm: "Sure?" } %>
